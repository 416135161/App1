<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.internet.netget"
    android:id="@+id/title_frame"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:orientation="vertical" >

    <com.internet.myui.TopBar
        android:id="@+id/topBar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white_color"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/title_paddingleft"
        android:paddingRight="@dimen/title_paddingright"
        custom:leftBackground="@drawable/title_bar_btn"
        custom:titleTextColor="@color/black_color" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:src="@drawable/logo" 
        android:scaleType="fitXY"
      
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="13dp"/>

</FrameLayout>