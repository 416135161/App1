<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="text_nodata_style">
        <item name="android:textSize">@dimen/main_font_size</item>
        <item name="android:textColor">@color/shuoming_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">1.0dip</item>
        <item name="android:paddingBottom">1.0dip</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:background">@drawable/btn</item>
        <item name="android:textColor">@drawable/btn_color</item>
        <item name="android:layout_width">74dp</item>
    </style>

    <!-- 登录界面输入框样式 -->
    <style name="login_edittext_style">
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/main_font_size</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="entrance_text_style">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="travel_text_style">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="entrance_pop_text_title_style">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="entrance_pop_text_style">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ff9900</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>


    
    
    <style name="AlertDialog" parent="@android:style/Theme.Dialog">
    <item name="android:windowBackground">@android:color/transparent</item>

    <item name="android:windowNoTitle">true</item>
  
</style>

  

</resources>